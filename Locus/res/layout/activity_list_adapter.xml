<?xml version="1.0" encoding="utf-8"?>
<!--  this is a single entry in the ListView created by ArrayAdapter -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
     android:padding="4dip" >

    <!-- left column -->

    <ImageView
        android:id="@+id/ImageView"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_vertical"
        android:focusable="false"
        android:padding="2dp"
        android:scaleType="fitXY" />

    <!-- right column -->

    <TextView
        android:id="@+id/NameTextView"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:layout_alignBottom="@+id/ListImageView"
        android:layout_alignTop="@+id/ListImageView"
        android:layout_toRightOf="@+id/ImageView"
        android:autoLink="none"
        android:editable="false"
        android:ellipsize="none"
        android:focusable="false"
        android:paddingBottom="2dp"
        android:paddingLeft="3dp"
        android:paddingRight="2dp"
        android:paddingTop="1dp"
        android:padding="5dip"
    android:background="@drawable/edittext"
        android:scrollHorizontally="false"
        android:singleLine="false"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/InterestTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ImageView"
        android:layout_alignLeft="@+id/NameTextView"
        android:layout_alignRight="@+id/NameTextView"
        android:layout_below="@+id/NameTextView"
        android:textStyle="italic"
        android:maxLines="1" 
  		android:maxLength="20" 
    	android:ellipsize="marquee"
        android:background="@drawable/edittext"
        android:scrollHorizontally="false"
        />

</RelativeLayout>